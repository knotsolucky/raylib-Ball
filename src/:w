#include "../include/movement.h"
#include "../include/raylib.h"

const int screenWidth = 800;
const int ScreenHeight = 450;

int main() {
  ballProperty ball;
  ball

      ball.x = 400;
  ball.y = 400;
  ball.radius = 60.0f;
  ball.speed_x = 100.0f;
  ball.speed_y = 100.0f;
  ball.defaultPosition = (Vector2){5, 55};

  InitWindow(screenWidth, ScreenHeight, "Raylib-game");
  SetTargetFPS(60);

  while (!WindowShouldClose()) {

    BeginDrawing();

    // ball.x += ball.speed_x;

    if (IsKeyDown(KEY_A)) {
      TraceLog(LOG_INFO, "W KEY WAS PRESSED");
    }

    DrawCircleV((Vector2)ball.defaultPosition, ball.radius, WHITE);

    EndDrawing();
  }
  CloseWindow();

  return 0;
}
